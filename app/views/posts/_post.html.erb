<% unless post.new_record? %>
  <article class="timeline-article">
    <header>
      <div class="image-container">
        <%= display_headshot(post.user) %>
      </div> <!-- image-container -->
      <p><%= link_to post.user.display_name, post.user %></p>
      <p class="posted">Posted on <%= post.created_at.to_date %></p>
    </header>
    <section>
      <p><%= post.body %></p>
    </section>
    <footer>
      <div class="right-side-links">
        <%= link_to 'Delete Post', user_post_path(post.user, post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?'} if policy(post).destroy? %>
      </div><!-- right-side-links -->
      <%= display_post_like_unlike(post) %>
      <%= render 'shared/likes', object: post %>
      <div class="comments">
        <%= render 'comments/index', post: post %>
        <%= render 'comments/form',  post: post, comment: post.comments.new %>
      </div> <!-- comments -->
    </footer>
  </article>
<% end %>
