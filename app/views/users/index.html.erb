<div class="right">
  <%= link_to 'New User', new_user_path, class: button_classes %>
</div> <!-- right -->
<h1>Users</h1>

<table class="<%= table_classes %>">
  <thead>
    <tr>
      <th>Email</th>
      <th>Sign Up Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.display_name %></td>
        <td><%= user.created_at.to_date %></td>
        <td><%= link_to 'Timeline', user_timelines_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
