<%= render 'users/user_header', user: @timeline.user %>


<div class="row top-row">
  <div class="col col-4">
    <article>
      <header>About</header>
      <section>
        <p><strong>Born on:</strong> <%= @timeline.user.birthday.to_date if @timeline.user.birthday %></p>
        <p><strong>Went to school at:</strong> <%= @timeline.user.college %></p>
        <p><strong>Hometown:</strong> <%= @timeline.user.hometown %></p>
        <p><strong>Currently Lives:</strong> <%= @timeline.user.current_town %></p>
      </section>
    </article>
    <article>
      <header>Photos (123)</header>
      <section>
        <p>Photos go here.</p>
        <%= link_to 'See more photos' %>
      </section>
    </article>

    <article>
      <header>Friends (123)</header>
      <section>
        <p>Friends go here.</p>
        <%= link_to 'See more friends' %>
      </section>
    </article>
  </div><!-- col col-4 -->

  <div class="col col-8 main-content">
    <% if policy(@timeline.post).create? %>
      <%= render 'users/post_form', user: @timeline.user, post: @timeline.post %>
    <% end %>

    <% @timeline.posts.each do |post| %>
      <% unless post.new_record? %>
        <article class="timeline-article">
          <header>
            <div class="image-container">
              <%= display_headshot(@timeline.user) %>
            </div> <!-- image-container -->
            <p><%= link_to @timeline.user.display_name, @timeline.user %></p>
            <p class="posted">Posted on <%= post.created_at.to_date %></p>
          </header>
          <section>
            <p><%= post.body %></p>
          </section>
          <footer>
            <%= link_to 'Like' %> <%= link_to 'Comment' %> <%= link_to 'Delete', user_post_path(@timeline.user, post), method: :delete, data: {confirm: 'Are you sure you want to delete this post?'} if current_user? %>
          </footer>
        </article>
      <% end %>
    <% end %>

  </div> <!-- col col-8 -->

