<% if post.has_comments? %>
  <% post.comments.each do |comment| %>
  <div class="comment">
    <header>
      <div class="image-container">
        <%= display_headshot(comment.user) %>
      </div> <!-- image-container -->
      <p><%= link_to comment.user.display_name, comment.user %></p>
      <p class="posted">Said on <%= comment.created_at.to_date %></p>
    </header>
      <p>#<%= comment.id %> <%= comment.body %></p>
      <div class="links">
        <%= link_to '^Delete', user_post_comment_path(post.user, post, comment), method: :delete, data: {confirm: 'Are you sure you want to delete this comment?'} if policy(comment).destroy? %>
      </div>

    <% end %>
  </div> <!-- comment -->
<% end %>
