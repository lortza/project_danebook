<nav class="navbar navbar-expand-md navbar-dark">
  <%= link_to 'DaneBook', root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">

      <% if signed_in_user? %>
      <li class="nav-item"><%= link_to 'All Users', users_path, class: 'nav-link' %></li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="<%= current_user %>" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <%= current_user.display_name %>
        </a>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
          <%= link_to 'My Feed', user_feed_path(current_user), class: 'dropdown-item' %>
          <%= link_to 'My Timeline', user_timeline_path(current_user), class: 'dropdown-item' %>
          <%= link_to 'My Profile', current_user, class: 'dropdown-item' %>

          <div class="dropdown-divider"></div>
          <%= link_to "Logout", logout_path, :method => :delete, class: 'dropdown-item' %>
        </div>
      </li>
      <% else %>
      <li class="nav-item"><%= link_to "Sign In", login_path, class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to "Sign Up", new_user_path, class: 'nav-link' %></li>
      <% end %>
    </ul>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-success my-2 my-sm-0" type="submit">Search</button>
    </form>
  </div>
</nav>
